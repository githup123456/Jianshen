<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@color/grey_ef">
        <com.humrousz.sequence.AnimationImageView
            android:id="@+id/action_play_img_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/action_play_rel_playing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/action_play_rel_music_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_75"
            android:orientation="horizontal">
            
            <RelativeLayout
                android:id="@+id/action_play_rel_music"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_26"
                android:background="@drawable/circle_grey_a0">
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_white_music"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/action_play_rel_count"
                android:layout_width="@dimen/dp_109"
                android:layout_height="@dimen/dp_109"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_26"
                android:visibility="gone"
                android:background="@drawable/circle_green">
                <TextView
                    android:id="@+id/action_play_tv_count_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_centerInParent="true"
                    android:textColor="#ffffffff"
                    android:textSize="64sp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/action_play_rel_duration"
                android:layout_width="@dimen/dp_109"
                android:layout_height="@dimen/dp_109"
                android:layout_centerInParent="true">
                
                <com.timqi.sectorprogressview.ColorfulRingProgressView
                    android:id="@+id/action_play_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fgColorStart="@color/green_19b55e"
                    app:fgColorEnd="@color/green_19b55e"
                    app:strokeWidth="@dimen/dp_7"
                    app:percent="0"/>

                <ImageView
                    android:id="@+id/action_play_img_play"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_green_play"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/action_play_rel_lock"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_26"
                android:background="@drawable/circle_grey_a0">
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_white_lock"/>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/action_play_tv_count_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="#ff323232"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/action_play_rel_music_play"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/action_play_rel_suspend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/action_play_rel_end"
            android:layout_width="@dimen/dp_109"
            android:layout_height="@dimen/dp_109"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_50"
            android:background="@drawable/circle_orange">
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_white_end"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end"
            android:layout_marginTop="14dp"
            android:textColor="#ff323232"
            android:layout_below="@+id/action_play_rel_end"
            android:layout_alignLeft="@+id/action_play_rel_end"
            android:layout_alignRight="@+id/action_play_rel_end"
            android:gravity="center"
            android:textSize="15sp" />
        <RelativeLayout
            android:id="@+id/action_play_rel_continue"
            android:layout_width="@dimen/dp_109"
            android:layout_height="@dimen/dp_109"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@drawable/circle_green">
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_white_continue"/>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_s"
            android:layout_marginTop="14dp"
            android:textColor="#ff323232"
            android:layout_below="@+id/action_play_rel_continue"
            android:layout_alignLeft="@+id/action_play_rel_continue"
            android:layout_alignRight="@+id/action_play_rel_continue"
            android:gravity="center"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>