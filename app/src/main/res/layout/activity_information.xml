        android:layout_width="@dimen/dp_16"
        android:layout_height="0.5dp"
        android:background="@color/white"/>
    <LinearLayout
        android:id="@+id/information_lly_thigh"
        android:layout_width="match_parent"
        android:layout_height="49dp"
