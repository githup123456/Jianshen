<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="168dp"
        android:layout_height="222dp"
        android:background="@drawable/shadow_radius_3_00"
        android:padding="@dimen/dp_8"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_plan_type_img_bg"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:scaleType="fitXY"
                android:src="@color/grey_9c"/>
            <ImageView
                android:id="@+id/item_plan_type_img_lock"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:src="@mipmap/plan_lock_grey"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_plan_type_tv_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Firm abs \n project"
            android:textColor="#ff323232"
            android:textSize="17sp"
            android:maxLines="2"
            android:layout_marginLeft="@dimen/dp_16"/>
        <TextView
            android:id="@+id/item_plan_type_tv_weeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Weeks"
            android:textColor="#ff999999"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="@dimen/dp_16"/>
    </LinearLayout>

</RelativeLayout>