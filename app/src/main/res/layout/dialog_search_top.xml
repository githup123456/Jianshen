<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:paddingTop="23dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_10"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/grey_radius_22_ef"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/window_search_img_search"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_27"
                android:src="@mipmap/select_black"
                android:layout_marginLeft="@dimen/dp_17"/>

            <com.shyj.jianshen.view.DelEditText
                android:id="@+id/window_search_et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/search_course"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black_32"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/window_search_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/window_cancel"
            android:textColor="#ff19b55e"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_0"
       android:layout_weight="1"
       android:background="@color/black"
       android:alpha="0.5"/>

</LinearLayout>