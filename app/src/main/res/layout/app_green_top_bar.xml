<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/green_19b55e"
    android:paddingTop="@dimen/dp_20">

    <ImageView
        android:id="@+id/top_bar_green_img_left"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="8.5dp"
        android:src="@mipmap/icon_white_back" />

    <TextView
        android:id="@+id/top_bar_green_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="8.5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/top_bar_green_img_right"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8.5dp"
        android:layout_marginRight="@dimen/dp_15" />
    <TextView
        android:id="@+id/top_bar_green_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8.5dp"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="#ffefefef"
        android:textSize="16sp"/>
</RelativeLayout>