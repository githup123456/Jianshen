<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/item_recommend_work_img_bg"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="@color/black_32" />

        <TextView
            android:id="@+id/item_recommend_work_tv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_28"
            android:text="@string/workout"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_recommend_work_tv_body"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_recommend_work_img_grand_one"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_8"
                android:src="@mipmap/grand_sign_green" />

            <ImageView
                android:id="@+id/item_recommend_work_img_grand_two"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/grand_sign_green" />

            <ImageView
                android:id="@+id/item_recommend_work_img_grand_three"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/grand_sign_grey" />

            <ImageView
                android:id="@+id/item_recommend_work_img_grand_four"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/grand_sign_grey" />
        </LinearLayout>
        <TextView
            android:id="@+id/item_recommend_work_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17min"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/item_recommend_work_img_state"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@mipmap/course_lock"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:visibility="gone"/>
    </RelativeLayout>


</RelativeLayout>