<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@drawable/radius_10_top_white"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/dp_28"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_7"
        android:background="#CFCFCF" />

    <com.shyj.jianshen.view.NoScrollViewPager
        android:id="@+id/action_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_detail_img_previous"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_16"
            android:scaleType="fitXY"
            android:src="@mipmap/back_page_grey" />

        <TextView
            android:id="@+id/action_detail_tv_page_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:text="1/4"
            android:textColor="#ff747474"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/action_detail_img_next"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_go_right" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1" />

        <Button
            android:id="@+id/action_detail_btn_close"
            android:layout_width="162dp"
            android:layout_height="@dimen/dp_46"
            android:background="@drawable/green_radius_3"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/close"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>