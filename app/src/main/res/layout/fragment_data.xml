<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/grey_ef"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="292dp"
            android:background="@drawable/white_radius_5"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="@string/calories_burned"
                android:textColor="#ff323232"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fragment_data_mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_22"
                android:text="January"
                android:textColor="#aeaeae"
                android:textSize="13sp" />


            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/fragment_data_bar_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@drawable/white_radius_5"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/history"
                    android:textColor="#ff323232"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_left"
                    android:text="   (kg)"
                    android:textColor="@color/grey_74"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/fragment_data_btn_record"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="29dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/green_radius_5"
                    android:text="@string/record"
                    android:textAllCaps="false"
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginRight="-15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current"
                        android:textColor="#ff747474"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/fragment_data_tv_weight_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="0.0"
                        android:textColor="#ff19b55e"
                        android:textSize="24sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="48dp"
                    android:background="#d7d7d7" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_30_days"
                        android:textColor="#ff747474"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/fragment_data_tv_weight_last"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="0.0"
                        android:textColor="#ff19b55e"
                        android:textSize="24sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="48dp"
                    android:background="#d7d7d7" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/annual_average"
                        android:textColor="#ff747474"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/fragment_data_tv_weight_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="0.0"
                        android:textColor="#ff19b55e"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_data_tv_weight_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="2020/04/08-2021/04/01"
                android:textColor="#ff19b55e"
                android:textSize="13sp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/fragment_data_lineChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@drawable/white_radius_5"
            android:layout_marginBottom="@dimen/dp_30"
            android:padding="@dimen/dp_15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_left_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/bmi"
                    android:textColor="#ff323232"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_left_one"
                    android:text="   (kg/m2)"
                    android:textColor="@color/grey_74"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/fragment_data_bmi_btn_edit"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="29dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/green_radius_5"
                    android:text="@string/edit"
                    android:textAllCaps="false"
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bmi_lly_bom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_8"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bmi_bg" />

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bmi_bg_center" />

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bmi_bg_end" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/fragment_data_bmi_img_color"
                        android:layout_width="13dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@color/color_5d9ff8" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bmi_one"
                        android:textColor="#ff71747b"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bmi_two"
                        android:textColor="#ff71747b"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bmi_three"
                        android:textColor="#ff71747b"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bmi_four"
                        android:textColor="#ff71747b"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/fragment_data_bmi_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your BMI:11.5"
                android:textColor="#484848"
                android:textSize="13sp"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_above="@id/bmi_lly_bom"/>
        </RelativeLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>