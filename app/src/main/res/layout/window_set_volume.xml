<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/set_volume_view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/set_volume_img_close"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="29dp"
        android:src="@mipmap/icon_white_close" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="@string/voice_guide"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <CheckBox
            android:id="@+id/set_volume_check_guide"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/swith_on_off"
            android:button="@null"
            android:checked="true" />

        <SeekBar
            android:id="@+id/set_volume_seekbar_guide"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/set_volume_check_guide"
            android:layout_marginTop="@dimen/dp_24"
            android:max="100"
            android:maxHeight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_white_grey"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_volume_seekbar_guide"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="48dp"
            android:text="@string/bg_music"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <CheckBox
            android:id="@+id/set_volume_check_music"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_28"
            android:layout_below="@+id/set_volume_seekbar_guide"
            android:layout_alignParentRight="true"
            android:layout_marginTop="48dp"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/swith_on_off"
            android:button="@null"
            android:checked="true" />

        <LinearLayout
            android:id="@+id/set_volume_lly_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_volume_check_music"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/set_volume_tv_music_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:text="Music name"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/set_volume_img_play"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="57dp"
                android:src="@mipmap/icon_white_playing" />

            <ImageView
                android:id="@+id/set_volume_img_music_list"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_17"
                android:src="@mipmap/icon_white_music_list" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/set_volume_seekbar_music"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/set_volume_lly_music"
            android:layout_marginTop="@dimen/dp_24"
            android:max="100"
            android:maxHeight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_white_grey"
            android:thumb="@drawable/seekbar_thumb" />
    </RelativeLayout>

</RelativeLayout>