<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/green_radius_2"/>
        <View
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/grey_radius_2"/>
        <View
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/grey_radius_2"/>
        <View
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/grey_radius_2"/>
        <View
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:background="@drawable/grey_radius_2"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_user_page_title"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_32"
        android:textColor="#ff121212"
        android:textSize="24sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_user_page_content"
        android:gravity="center"
        android:layout_marginTop="34dp"
        android:textColor="#ff71747b"
        android:textSize="17sp" />

    <RadioGroup
        android:id="@+id/select_sex_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_70"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/select_sex_radio_btn_1"
            android:layout_width="@dimen/dp_109"
            android:layout_height="@dimen/dp_109"
            android:background="@drawable/checked_circle_sex"
            android:checked="true"
            android:layout_marginRight="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_32"
            android:drawableLeft="@mipmap/icon_women_white"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/select_sex_radio_btn_2"
            android:layout_width="@dimen/dp_109"
            android:layout_height="@dimen/dp_109"
            android:background="@drawable/checked_circle_sex"
            android:checked="false"
            android:paddingLeft="@dimen/dp_32"
            android:drawableLeft="@mipmap/icon_men_white"
            android:button="@null"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/dp_109"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_user_page_female"
                android:textColor="#ff71747b"
                android:layout_marginTop="@dimen/dp_18"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_109"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_user_page_male"
                android:textColor="#ff71747b"
                android:layout_marginTop="@dimen/dp_18"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>